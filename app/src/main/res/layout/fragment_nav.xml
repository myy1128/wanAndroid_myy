<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NavFragment"
    android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->
    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:id="@+id/navigation_tab_layout"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:background="@color/view_bg"
        app:indicator_color="@color/tab_selected"
        app:indicator_gravity="fill"
        app:tab_height="50dp"
        app:tab_margin="16dp"
        app:tab_mode="scrollable" />

    <View
        android:id="@+id/navigation_divider"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/scrollbar"
        android:scrollbarSize="3dp"
        android:scrollbars="vertical" />

</LinearLayout>